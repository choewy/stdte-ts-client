{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@common": ["src/common"],
      "@config": ["src/config"],
      "@core": ["src/core"],
      "@store": ["src/store"],
      "@props": ["src/props"],
      "@service": ["src/service"],
      "@hook": ["src/hook"],
      "@component": ["src/component"],
      "@page": ["src/page"],
      "@layout": ["src/layout"],
      "@router": ["src/router.tsx"],
      "@app": ["src/app.tsx"]
    }
  },
  "include": ["src"],
  "exclude": ["./craco.config.js"]
}
